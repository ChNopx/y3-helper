{
    "name": "y3-helper",
    "displayName": "y3-helper",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.83.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:y3/开发计划.md",
        "onTaskType:y3-helper"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "y3-helper.initProject",
                "title": "初始化Y3开发环境",
                "icon": "image/logo.png"
            }
        ],
        "taskDefinitions": [
            {
                "type": "y3-helper",
                "required": [
                    "task"
                ],
                "properties": {
                    "task": {
                        "type": "string",
                        "enum": [
                            "launch"
                        ]
                    }
                }
            }
        ],
        "configuration": {
            "title": "Y3-Helper",
            "type": "object",
            "properties": {
                "Y3-Helper.EditorPath": {
                    "type": "string",
                    "default": "",
                    "ignoreSync": true,
                    "description": "Y3编辑器的完整路径。如果为空则会从注册表中获取。"
                }
            }
        }
    },
    "icon": "images/logo.png",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "winreg": "^1.2.5"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "18.x",
        "@types/vscode": "^1.83.0",
        "@types/winreg": "^1.2.34",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vscode/test-electron": "^2.3.6",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2"
    }
}
